
    <%- include('../commons/nav.ejs')%>
<div class="container">
    <h1 class="text-center mt-5 mb-0">Answers</h1>
    <div class="line mt-1 mb-3"></div>
    <a class="btn btn-primary" href="/hrs/answers/create">Create new answer</a>
    <table class="table" id="tasks-table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Question</th>
            <th scope="col">Answer</th>
            <th scope="col">Is Correct?</th>
        </tr>
        </thead>
        <tbody>
        <%
        if(answers.length) {
        answers.forEach(function (answer, index) {
        %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td>
                        <a href="/hrs/questions/<%= answer.question_id %>/edit">
                            <%= answer.question_body %>
                        </a>
                    </td>
                    <td>
                        <a href="/hrs/answers/<%= answer.id %>/edit">
                            <%= answer.body %>
                        </a>
                    </td>
                    <td>
                        <%= answer.is_correct? "Yes" : "No" %>
                    </td>
                </tr>
        <%
            });
        } else { %>
            <tr>
                <td colspan="4">No results found</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script src="/js/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
